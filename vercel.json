{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/static/(.*)",
      "destination": "/frontend/static/$1"
    },
    {
      "source": "/favicon.ico",
      "destination": "/api/index.py"
    },
    {
      "source": "/((?!api|static|favicon.ico).*)",
      "destination": "/frontend/index.html"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "DEBUG": "true"
  }
}
